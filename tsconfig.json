{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/api/*": ["./src/api/*"],
      "@/test/*": ["./src/__test__/*"],
      "@/helpers/*": ["./src/api/helpers/*"],
      "@/controllers/*": ["./src/api/controllers/*"],
      "@/routes/*": ["./src/api/routes/*"],
      "@/services/*": ["./src/api/services/*"],
      "@/models/*": ["./src/api/models/*"],
      "@/config/*": ["./src/api/helpers/config/*"],
      "@/dto/*": ["./src/api/helpers/dto/*"],
      "@/schema/*": ["./src/api/helpers/schema/*"],
      "@/enum/*": ["./src/api/helpers/enum/*"],
      "@/interfaces/*": ["./src/api/helpers/interfaces/*"],
      "@/lib/*": ["./src/api/helpers/lib/*"],
      "@/middlewares/*": ["./src/api/helpers/middlewares/*"],
      "@/validators/*": ["./src/api/helpers/validators/*"],
      "@/utils/*": ["./src/api/helpers/utils/*"],
      "@/types/*": ["./src/api/helpers/types/*"],
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*.ts", "/src/types/**/*.d.ts", "/src/__test__/**/*.test.ts"],
  "exclude": ["node_modules", "package.json"]
}